		$(document).ready( function(){
			
			//기본으로 카드 목록이 나오도록 한다.
			
			//카드목록 클릭
			if('${viewType}' == 'Total'){
				$("#cardSummary").hide();
				$("#cardList").show();
				$("#totalTab").attr('class','on');
				$("#mainTab").attr('class','');
			}else{											//카드요약 클릭				
				$("#cardSummary").show();
				$("#cardList").hide();				
				$("#totalTab").attr('class','');
				$("#mainTab").attr('class','on');
			}
		});
	</script>
	
